{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "typings",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ]
    }
  },
  "include": [
    "**/*"
  ]
}